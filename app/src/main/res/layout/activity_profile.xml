<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Profile"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorHintText">
    <ImageView
        android:id="@+id/profPic"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/epicbombscene"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/NIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#53466e"
        android:layout_alignStart="@id/profPic"
        android:layout_marginTop="20dp"
        android:layout_below="@id/profPic" />

    <TextView
        android:id="@+id/isiNIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00000023490"
        android:textSize="20dp"
        android:textColor="#e9deff"
        android:layout_alignEnd="@id/profPic"
        android:layout_marginTop="20dp"
        android:layout_below="@id/profPic" />

    <TextView
        android:id="@+id/Nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#53466e"
        android:layout_alignStart="@id/profPic"
        android:layout_below="@id/NIM" />

    <TextView
        android:id="@+id/isiNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belinda P. Polim"
        android:textSize="20dp"
        android:textColor="#e9deff"
        android:layout_alignEnd="@id/profPic"
        android:layout_below="@id/isiNIM" />

    <TextView
        android:id="@+id/Kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#53466e"
        android:layout_alignStart="@id/profPic"
        android:layout_below="@id/Nama" />

    <TextView
        android:id="@+id/isiKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CL"
        android:textSize="20dp"
        android:textColor="#e9deff"
        android:layout_alignEnd="@id/profPic"
        android:layout_below="@id/isiNama" />

    <TextView
        android:id="@+id/Referensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referensi"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#53466e"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/Kelas" />
    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/Referensi"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/NIM"
        android:layout_alignRight="@id/isiNIM"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/ref01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="codebind.com \nstackoverflow.com\ndeveloper.android.com\nlarntech.net\nandroidhive.info\nYouTube (Tihomir RAdeff)\nYouTube (Coding with Sara)\nYouTube (ProgrammingWizards TV)" />
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>